@model FlightReservationSystem.Models.Flight


<h4>Search Flights</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResults">
            
            <div class="form-group">
                <label class=" control-label">Departure</label>
                <input name="searchTerm" class="form-control" required />

                <label class=" control-label">Arrival</label>
                <input name="searchTerm1" class="form-control" required />

                <label class=" control-label">Departure Date </label>
                <input type="date" name="searchTerm2" class="form-control" required/>
            </div>

          
            
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

