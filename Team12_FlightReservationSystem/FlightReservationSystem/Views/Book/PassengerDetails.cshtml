    @section Scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                $("#div2").hide();
                $("#div3").hide();
            });
            $("#PassengerNumber").change(function () {
                if ($("#PassengerNumber").val() == "1") {
                    $("#div2").hide();
                    $("#div3").hide();
                }
                if ($("#PassengerNumber").val() == "2") {
                    $("#div2").show();
                    $("#div3").hide();
                }
                if ($("#PassengerNumber").val() == "3") {
                    $("#div2").show();
                    $("#div3").show();
                }
            });
        </script>
