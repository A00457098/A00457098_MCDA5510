@{
    ViewData["Title"] = "Search Flights";
}
<h3 class="text-center">@ViewData["Title"]</h3>


@{
    Html.BeginForm("Search", "Home", "Index", FormMethod.Post);

    <center>
        <table cellpadding="7">
            <tr>
                <td>
                    @*<h4>Departure City</h4>*@
                    <input type="text"
                           name="departureCity"
                           placeholder="From"
                           required="" />

                </td>

                <td>
                    @*<h4>Arrival City</h4>*@
                    <input type="text"
                           name="destinationCity"
                           placeholder="To"
                           required="" />
                </td>

                <td>
                    @*<h4>Departure Date </h4>*@
                    <input type="date"
                           name="date"
                           onfocus="this.value = '';"
                           onblur="if (this.value == '') { this.value = " Departure"}" />
                </td>
            </tr>
            <tr>
                <td />
            </tr>
            <tr>
                <td />
                <td>
                    <input class="btn-primary btn-block" type="submit" value="Find" />
                </td>
            </tr>
        </table>
    </center>


}
